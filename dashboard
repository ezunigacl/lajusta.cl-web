    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js';
        import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js';

        const firebaseConfig = JSON.parse(__firebase_config);
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);

        // UI Elements
        const welcomeName = document.getElementById('welcomeName');
        const sidebarName = document.getElementById('sidebarName');
        const sidebarEmail = document.getElementById('sidebarEmail');
        const avatarInitials = document.getElementById('avatarInitials');
        const btnLogout = document.getElementById('btnLogout');

        // Monitor Auth State
        onAuthStateChanged(auth, (user) => {
            if (user) {
                // Get display name or fallback
                const displayName = user.displayName || user.email.split('@')[0];
                const email = user.email;
                
                // Update UI
                welcomeName.innerText = displayName;
                sidebarName.innerText = displayName;
                sidebarEmail.innerText = email;
                
                // Initials
                const initials = displayName.substring(0, 2).toUpperCase();
                avatarInitials.innerText = initials;
                
            } else {
                // Si no hay usuario, redirigir al index (login)
                // Para efectos del preview en Canvas, mostramos datos demo si no hay auth real
                console.log("No user signed in. Redirecting to login...");
                // window.location.href = 'index.html'; // Descomentar en producción
                
                // Demo fallback para visualización
                welcomeName.innerText = "Camila";
                sidebarName.innerText = "Camila Muñoz";
                sidebarEmail.innerText = "camila@empresa.cl";
                avatarInitials.innerText = "HR";
            }
        });

        // Logout
        btnLogout.addEventListener('click', () => {
            signOut(auth).then(() => {
                window.location.href = 'index.html';
            }).catch((error) => {
                console.error("Error signing out", error);
            });
        });
        
        // Initializations
        lucide.createIcons();
        const ctx = document.getElementById('wellnessChart').getContext('2d');
        const colorAcid = '#CCFF00';
        const colorWhiteDim = 'rgba(255, 255, 255, 0.2)';
        const colorWhiteDimmer = 'rgba(255, 255, 255, 0.08)';

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Sano', 'En Riesgo', 'Crítico'],
                datasets: [{
                    data: [55, 30, 15], 
                    backgroundColor: [colorAcid, colorWhiteDim, colorWhiteDimmer], 
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#F3F4F6', 
                            font: { size: 10, family: 'Space Mono' },
                            usePointStyle: true,
                            pointStyle: 'rect' 
                        }
                    }
                },
                cutout: '75%' 
            }
        });
    </script>
</body>
