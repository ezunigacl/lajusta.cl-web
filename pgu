    <script>
        // --- 1. LÓGICA DE NEGOCIO (PGU 2025) ---
        let config = { pguMax: 214296, lowerThreshold: 729764, upperThreshold: 1158355 };
        let pensionChart = null;
        const ESTIMATED_MONTHLY_BONUS_PER_CHILD = 6500; 

        const formatCLP = (num) => '$ ' + num.toLocaleString('es-CL');
        const parseCLP = (str) => parseInt(str.replace(/\D/g, '')) || 0;

        function formatCurrency(input) {
            let value = input.value.replace(/\D/g, '');
            if (value === '') { input.value = ''; return; }
            input.value = parseInt(value).toLocaleString('es-CL');
        }

        function updateRSHLabel() {
            const val = document.getElementById('rshInput').value;
            const label = document.getElementById('rshValueDisplay');
            label.innerText = val + "%";
            label.className = val <= 90 ? 'font-mono text-white text-sm font-bold' : 'font-mono text-danger text-sm font-bold';
        }

        function toggleFemaleOptions() {
            const isFemale = document.getElementById('genderSelect').value === 'female';
            document.getElementById('bonoHijoPanel').classList.toggle('hidden', !isFemale);
            document.getElementById('bonoHijoRow').classList.toggle('hidden', !isFemale);
            if(!isFemale) document.getElementById('childCountInput').value = 0;
        }

        function calculatePGU() {
            const age = parseInt(document.getElementById('ageInput').value) || 0;
            const selfFinancedPension = parseCLP(document.getElementById('pensionInput').value);
            const residence = document.getElementById('residenceCheck').checked;
            const rshValue = parseInt(document.getElementById('rshInput').value);
            const gender = document.getElementById('genderSelect').value;
            
            let monthlyBonoHijo = (gender === 'female' && age >= 65) ? (parseInt(document.getElementById('childCountInput').value) || 0) * ESTIMATED_MONTHLY_BONUS_PER_CHILD : 0;
            let totalBasePension = selfFinancedPension + monthlyBonoHijo;

            let pguAmount = 0;
            let statusMessage = "NO ELEGIBLE";
            let statusClass = "bg-red-500/20 text-red-400 border-red-500/50";

            const isAgeEligible = age >= 65;
            document.getElementById('ageWarning').classList.toggle('hidden', isAgeEligible);

            if (isAgeEligible && residence && rshValue <= 90) {
                if (totalBasePension <= config.lowerThreshold) {
                    pguAmount = config.pguMax;
                    statusMessage = "MONTO MÁXIMO";
                    statusClass = "bg-acid/20 text-acid border-acid/50";
                } else if (totalBasePension < config.upperThreshold) {
                    const factor = (totalBasePension - config.lowerThreshold) / (config.upperThreshold - config.lowerThreshold);
                    pguAmount = Math.round(config.pguMax * (1 - factor));
                    statusMessage = "MONTO VARIABLE";
                    statusClass = "bg-yellow-400/20 text-yellow-400 border-yellow-400/50";
                } else {
                    statusMessage = "EXCEDE TOPE";
                    statusClass = "bg-white/10 text-white/60 border-white/20";
                }
            }

            document.getElementById('displayBase').innerText = formatCLP(selfFinancedPension);
            document.getElementById('displayBonoHijo').innerText = formatCLP(monthlyBonoHijo);
            document.getElementById('displayPGU').innerText = formatCLP(pguAmount);
            document.getElementById('displayTotal').innerText = formatCLP(totalBasePension + pguAmount);
            
            const badge = document.getElementById('statusBadge');
            badge.className = `px-3 py-1 border rounded text-[10px] font-bold uppercase tracking-widest ${statusClass}`;
            badge.innerText = statusMessage;

            updateChart(selfFinancedPension, monthlyBonoHijo, pguAmount);
        }

        function initChart() {
            const ctx = document.getElementById('pensionChart').getContext('2d');
            pensionChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Ahorros', 'Bono Hijo', 'PGU'],
                    datasets: [{ data: [1, 0, 0], backgroundColor: ['rgba(255, 255, 255, 0.1)', 'rgba(204, 255, 0, 0.4)', '#CCFF00'], borderWidth: 0 }]
                },
                options: { cutout: '80%', plugins: { legend: { display: false } } }
            });
        }

        function updateChart(base, bono, pgu) {
            if (!pensionChart) return;
            pensionChart.data.datasets[0].data = (base + bono + pgu === 0) ? [1,0,0] : [base, bono, pgu];
            pensionChart.update();
        }

        // --- 2. INDICADORES EN TIEMPO REAL ---
        async function fetchIndicators() {
            try {
                const response = await fetch('https://mindicador.cl/api');
                const data = await response.json();
                const fmt = new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP', maximumFractionDigits: 0 });
                document.getElementById('navUF').innerText = fmt.format(data.uf.valor);
                document.getElementById('navUTM').innerText = fmt.format(data.utm.valor);
                document.getElementById('navUF').classList.remove('animate-pulse');
                document.getElementById('navUTM').classList.remove('animate-pulse');
            } catch (e) { console.error("Error indicadores"); }
        }

        function downloadPDF() { window.print(); } // Simplificado para demo

        // INIT
        window.addEventListener('DOMContentLoaded', () => {
            initChart();
            lucide.createIcons();
            fetchIndicators();
            calculatePGU();
        });
    </script>
</body>
</html>
